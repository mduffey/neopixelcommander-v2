<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:NeoPixelCommander.DataTemplates"
                    xmlns:control="clr-namespace:NeoPixelCommander.ViewModel.LightManagers"
                    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">
    <DataTemplate DataType="{x:Type control:ScreenSamplingViewModel}">
        <StackPanel>
            <TextBlock Text="Interval" Margin="0,10,0,0" />
            <Slider x:Name="Interval" Value="{Binding Interval}" Margin="0,5,0,0" TickFrequency="50" SmallChange="50" Minimum="0" Maximum="500" />
            <TextBlock Text="Use the interval to reduce the frequency of polling, if CPU usage is a concern." Margin="0,10,0,0" TextWrapping="Wrap" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>